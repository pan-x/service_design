<!DOCTYPE html>
<html>
	<head>
		<title>ServiceDesign</title>
		<%= stylesheet_link_tag    "application", :media => "all" %>
		<%= javascript_include_tag "application" %>
		<link rel="apple-touch-icon" href="/assets/apple-touch-icon-57x57.png" />
			<%= stylesheet_link_tag    "mobile", :media => "all" %>
			<style type="text/css">
				@font-face {
				  font-family: 'Conv_FairfieldLTStd-LightItalic';
				  src: url('<%= asset_path('FairfieldLTStd-LightItalic.eot')%>');
				  src: local('☺'), url('<%= asset_path('FairfieldLTStd-LightItalic.woff')%>') format('woff'), url('<%= asset_path('FairfieldLTStd-LightItalic.ttf')%>') format('truetype'), url('<%= asset_path('FairfieldLTStd-LightItalic.svg')%>') format('svg');
				  font-weight: normal;
				  font-style: normal;
				}
				@font-face {
				font-family: 'Conv_UniversLTStd-Cn';
				src: url ('<%= asset_path('UniversLTStd-Cn.eot')%>');
				src: local('☺'), url ('<%= asset_path('UniversLTStd-Cn.woff')%>') format('woff'), url ('<%= asset_path('UniversLTStd-Cn.ttf')%>') format('truetype'), url ('<%= asset_path('UniversLTStd-Cn.svg')%>') format('svg');
				font-weight: normal;
				font-style: normal;
	  			}	
	  		</style>
		<%= csrf_meta_tags %>


	</head>
	<body>
		<div class="w980">
			<div id="navi">
				<% unless @current_user.blank?%>
				<% if is_admin? %>
				<%= link_to 'Profile', users_path, :remote => true, :id => "ajax_trigger"%>
				<% else %>
				<%= link_to 'Profile', user_path(@current_user), :remote => true, :id => "ajax_trigger"%>
				<% end %>
				<%= link_to 'Sessions', active_sessions_sessions_path%>
				<%= link_to 'new Message', new_session_path, :remote => true, :id => "ajax_trigger"%>
				<%= link_to 'logout', access_logout_path, :remote => true, :id => "ajax_trigger"%>
				<%= yield :navi %>
				<% end %>

			</div>
			<div id="content">
				<%= yield %>
				
			</div>
			
		</div>
	</body>
</html>